
<div class="container-menu">

  <div>

    <div class="menu">

      <h3> MENU </h3>

      <table class="table table-hover table-bordered">

        <thead>

          <tr>

              <th scope="col-3"><h5>Product</h5></th>

              <th scope="col-7"><h5>Descriptions</h5></th>

              <th scope="col-2 colspan="2"><h5>Price</h5></th>

              <th></th>

          </tr>

        </thead>

        <tbody>

          <% for(let foodItem in info.foodmenu) { %>

          <tr>

            <th>

              <h6 class="food-name"><%= info.foodmenu[foodItem].name %></h6>

            </th>

            <td><h6><%= info.foodmenu[foodItem].description %></h6></td>

            <td><h6 class="food-price"><%= info.foodmenu[foodItem].price %></h6></td>

            <td>

              <button  class="add-button btn btn-lg btn-primary btn-block">

                <span class="glyphicon glyphicon-remove"></span>Add

              </button>

            </td>

          </tr>

          <% }%>

        </tbody>

      </table>

    </div>

  </div>

</div>



